# Core
NODE_ENV=development
PORT=3000
HOST=localhost
API_VERSION=v1

# MongoDB
MONGODB_URI=mongodb://localhost:27017/collaborative-editor
MONGODB_TEST_URI=mongodb://localhost:27017/collaborative-editor-test
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=5

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=collab_editor:
REDIS_SESSION_PREFIX=session:
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# JWT
JWT_SECRET=change-me-super-secret-at-least-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change-me-refresh-secret
JWT_REFRESH_EXPIRE=30d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# Session
SESSION_SECRET=change-me-session-secret-at-least-32-chars
SESSION_NAME=collaborative_editor_session
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Uploads
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_MAX_FILES=10
UPLOAD_ALLOWED_TYPES=.js,.ts,.jsx,.tsx,.py,.java,.cpp,.c,.h,.css,.html,.json,.xml,.md,.txt
UPLOAD_DESTINATION=./uploads
TEMP_UPLOAD_DIR=./temp

# WebSocket
WEBSOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
WEBSOCKET_CORS_CREDENTIALS=true
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_MAX_HTTP_BUFFER_SIZE=1000000
WEBSOCKET_TRANSPORTS=websocket,polling

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20971520
LOG_FILE_MAX_FILES=5
LOG_DIR=./logs
LOG_DATE_PATTERN=YYYY-MM-DD
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true

# Helmet
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false
HELMET_CROSS_ORIGIN_OPENER_POLICY=same-origin
HELMET_CROSS_ORIGIN_RESOURCE_POLICY=cross-origin
HELMET_DNS_PREFETCH_CONTROL=true
HELMET_FRAME_GUARD=deny
HELMET_HIDE_POWERED_BY=true
HELMET_HSTS_MAX_AGE=31536000
HELMET_IE_NO_OPEN=true
HELMET_NO_SNIFF=true
HELMET_ORIGIN_AGENT_CLUSTER=true
HELMET_PERMITTED_CROSS_DOMAIN_POLICIES=none
HELMET_REFERRER_POLICY=no-referrer
HELMET_XSS_FILTER=true

# Metrics/Analytics (optional)
ENABLE_METRICS=false
METRICS_PORT=9090
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
GOOGLE_ANALYTICS_ID=

# OT / Cache / Debug
OT_MAX_CONCURRENT_OPS=100
OT_OPERATION_TIMEOUT=5000
OT_CONFLICT_RESOLUTION_STRATEGY=server_wins
OT_ENABLE_COMPRESSION=true

CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=1800
CACHE_TTL_PROJECT_DATA=7200
CACHE_TTL_FILE_CONTENT=1800
ENABLE_MEMORY_CACHE=true
MEMORY_CACHE_MAX_SIZE=100

DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false